underline = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/statusbar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 20 
;offset-x = 25%
;offset-y = 1%
radius = 0.0
fixed-center = true 
bottom = false

